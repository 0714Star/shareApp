.title {
  margin-top: 30px;
  font-size: 14px;
  font-weight: bold;
  color: #333;
  margin-bottom: 15px;
}
.media-info-wrap {
  width: 320px;
  background-color: #fafafa;
  padding: 10px;
  box-sizing: border-box;
  border-left: #f1f1f1 solid 1px;
  overflow-y: auto;
  height: 100%;
}
.preview {
  width: 100%;
  overflow: hidden;
  position: relative;
  margin-bottom: 10px;
}
.preview:hover .ops {
  opacity: 1;
  visibility: visible;
}
.preview .ops {
  position: absolute;
  bottom: 10px;
  left: 0;
  right: 10px;
  display: flex;
  justify-content: flex-end;
  gap: 10px;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.3s;
}
.preview .ops .op {
  cursor: pointer;
  width: 30px;
  height: 30px;
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50%;
  box-shadow: 0 0 6px rgba(0, 0, 0, 0.06);
  transition: background-color 0.3s;
}
.preview .ops .op:hover {
  background: #eee;
}
.preview .img {
  width: 100%;
  height: 180px;
  border-radius: 4px;
}
.preview .video {
  height: 180px;
}
.preview .video uni-video {
  width: 100%;
  height: 100%;
}
.info-item {
  margin-bottom: 20px;
}
.info-item .label {
  font-size: 13px;
  font-weight: bold;
  color: #999;
}
.info-item .content {
  margin-top: 10px;
  color: #333;
  font-size: 14px;
  word-break: break-all;
}
.media-base-info {
  display: flex;
  flex-wrap: wrap;
}
.media-base-info .info-item {
  width: 50%;
  margin-bottom: 15px;
}
.media-base-info .info-item .content {
  margin-top: 5px;
}
@media screen and (max-width: 1360px) {
.media-info-wrap {
    width: 280px;
}
}